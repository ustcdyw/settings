!----------------------
!-- Key binding
!----------------------

! 鼠标选择自动复制，ctrl-x粘贴
XTerm*VT100.Translations: #override \
    Ctrl <KeyPress> x: insert-selection(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
    <BtnUp>: select-end(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n

! ctrl-k/j向上向下滚动(一次3行)
XTerm.VT100.translations: #override \
    Ctrl <Key>k: scroll-back(10) \n\
    Ctrl <Key>j: scroll-forw(10)

