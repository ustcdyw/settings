#define S_Cyan_1       #00f5e9
#define S_White_0      #d3d7cf
#define S_White_1      #eeeeec

!----------------------
!-- Common color scheme
!----------------------

*background:  S_Background
*foreground:  S_Foreground
*cursorColor: S_Cursor

! foreground的高亮色 (\e[;1m)
*colorBD:     S_ForegroundBD
! Black (\e[30m)
*color0:  S_Black_0
*color8:  S_Black_1
! Red   (\e[31m)
*color1:  S_Red_0
*color9:  S_Red_1
! Green (\e[32m)
*color2:  S_Green_0
*color10: S_Green_1
! Yellow (\e33m)
*color3:  S_Yellow_0
*color11: S_Yellow_1
! Blue (\e34m)
*color4:  S_Blue_0
*color12: S_Blue_1
! Magenta(\e35m) [洋红色]
*color5:  S_Magenta_0
*color13: S_Magenta_1
! Cyan(\e36m) [蓝绿色]
*color6:  S_Cyan_0
*color14: S_Cyan_1
! White (\e37m)
*color7:  S_White_0
*color15: S_White_1

